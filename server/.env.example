# Server
PORT=3000

# AWS S3
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# x402 Payment
FACILITATOR_URL=https://facilitator.x402.org
RECEIVING_ADDRESS=0xYourReceivingAddress
PAYMENT_TOKEN_ADDRESS=0xPaymentTokenAddress
PAYMENT_TOKEN_NAME=Bridged USDC (SKALE Bridge)
NETWORK_CHAIN_ID=324705682

# Pricing (in smallest unit, e.g., 20000 = 0.02 USDC with 6 decimals)
# 0.02 USDC per upload for files up to 1GB
DEFAULT_PRICE=20000

# File constraints
MAX_FILE_SIZE=1000000000         # 1GB in bytes (1000 × 1000 × 1000)
FILE_EXPIRATION_DAYS=10          # File expiration in days
